#include<iostream>
#include <cmath>
using namespace std;

 int main()
 {
   float x,y ; 
   cout <<  "x : = ";
   cin>>x;
   if (!x || x >=-1 ){
        y = 1/x+sqrt(x+1);
        cout << "x = " << x << "\t" << "y = " << y << endl;
   }
    else{
          cout << "функция  не определена "<< endl;
     }
    return 0;
 }
